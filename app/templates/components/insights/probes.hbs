<div class="user-tests" id="user-tests">
  <section class="user-tests__header">
    <header>
      <h5>Probes</h5>
      <p class="subtitle-2">
        {{#if this.lastScanEndedAt}}
          Last Scan: {{this.lastScanEndedAt}}
        {{/if}}
      </p>
    </header>
  </section>
  <section class="user-tests__content">
    <header>
      <h6>Daily Probe List</h6>
    </header>
    {{#basic-dropdown as |dd|}}
      {{#dd.trigger class='modal-field active-probe-filter browser-default probe-input-filter dropdown-trigger'}}
        <span id="active-probe-text">{{this.probeFilterLabel}}</span>
      {{/dd.trigger}}
      {{#dd.content class='dropdown-content'}}
        <li>
          <a {{on 'click' (action 'setFilter' 'all' dd)}} class='{{if (eq this.probeFilter 'all') 'dropdown-selected'}} dropdown-list-elements' id="all-probe-filter">All Probe</a>
        </li>
        <li>
          <a {{on 'click' (action 'setFilter' 'active' dd)}} class='{{if (eq this.probeFilter 'active') 'dropdown-selected'}} dropdown-list-elements'>Active Probe</a>
        </li>
        <li>
          <a {{on 'click' (action 'setFilter' 'inactive' dd)}} class='{{if (eq this.probeFilter 'inactive') 'dropdown-selected'}} dropdown-list-elements'>Inactive Probe</a>
        </li>
      {{/dd.content}}
    {{/basic-dropdown}}
    <Insights::ProbesList
      @probes={{this.probes}}
    />
  </section>
</div>
